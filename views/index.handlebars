{{!-- Setup the `index.handlebars` to have the template that Handlebars can render onto. --}}
 <container>
   <section>
      <aside>
          <ul id="order">
            
              {{#each burger_data}}
                {{#if this.devoured}}
                  <div class="btnli">
                    <li>{{this.burger_name}}</li>
                     <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                       <input type="hidden" name="devoured" value="0">
                      <button type="submit" class="eat" >EAT!!!</button>
                    </form>
                  </div>
                    {{/if}}
              {{/each}}
          </ul>
        </aside>
        <div id="right">
            <ul>
               {{#each burger_data}}
                  {{#unless this.devoured}}
                    <li>{{this.id}}. {{this.burger_name}}</li>
                  {{/unless}}
              {{/each}}
            </ul>
        </div>


        <div class="center">
             <img src="./assets/img/burger.png">
              <h3>Build Your Own Burger</h3>
              <form action = "/burgers" method = "POST">
                <textarea type="text" rows= 3 type="textarea" name="burger" value="" id="enter_text" placeholder="Click here to create your burger ..." ></textarea>
                  <button type="submit" class="order" id="text-enter-button">Order Burger </button>
              </form>
        </div>
   </section>
         <div style="clear:both;"></div>
          
  </container>

  
